				</configuration>
			</plugin>
			
		<!-- 2- Ignorer les tests unitaires  -->	
			<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.12.2</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
   
		</plugins>
	</build>


